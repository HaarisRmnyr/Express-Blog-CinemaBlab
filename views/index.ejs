<main>
    <div class="container">
        <h1>Recent Blabs</h1>
        
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <div class="post-card">
                    <h2><%= post.title %></h2>
                    <h3>By: <%= post.author && post.author.username ? post.author.username : 'Anonymous' %></h3>                    <img src="<%= post.image %>" alt="<%= post.title %> Poster" class="img-fluid mb-3">                    <p><%= post.body %></p>
                    <small>Posted on <%= post.createdAt.toLocaleDateString() %></small>
                </div>
                <hr>
            <% }); %>
        <% } else { %>
            <p>No posts to display yet. Be the first to post!</p>
        <% } %>
        
    </div>
</main>